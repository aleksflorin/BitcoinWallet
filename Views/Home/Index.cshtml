@{
    ViewData["Title"] = "BitcoinWallet";
}

<div id="snoAlertBox" class="alert alert-success" data-alert="alert">Your address was succefully copied.</div>
<div class="m-2 w-100 box-shadow d-flex justify-content-between p-3 card-btc">
    <div class="w-25">
        <i class="fas fa-clock"></i>
        Today date, 17.10.2020
    </div>
    <div class="w-25 text-right">
        <i class="fab fa-bitcoin"></i> Balance: 3 BTC;
    </div>
</div>

<div class="m-2 mt-4 w-100 row justify-content-between">
    <div data-toggle="modal" data-target="#wallet-adress" class="col-md-2 p-2 card-btc btn-green text-center box-shadow">
        <p class="btn-hp"><i class="fas fa-download"></i> Receive</p>
    </div>
    <div class="col-md-2 p-2 card-btc btn-purple text-center box-shadow">
        <p class="btn-hp"><i class="fas fa-upload"></i>Send</p>
    </div>
    <div class="col-md-2 p-2 card-btc btn-blue text-center btn-disabled box-shadow">
        <p class="btn-hp"><i class="fas fa-cash-register"></i> Buy</p>
    </div>
    <div class="col-md-2 p-2 card-btc btn-pink text-center box-shadow">
        <p class="btn-hp"><i class="fas fa-exchange-alt"></i> Exchange</p>
    </div>
</div>

<div class="m-2 mt-4 w-100 box-shadow   p-3 card-btc">
    <div class="card-btc-header justify-content-between d-flex">
        <h3>BTC evolution</h3>
        <i class="far fa-eye" data-toggle="collapse" data-target="#btn-chart" aria-expanded="false" type="button" aria-controls="btn-chart"></i>
    </div>
    <div class="card-btc-body" id="btn-chart">

        <div style="height:560px; background-color: #1D2330; overflow:hidden; box-sizing: border-box; border: 1px solid #282E3B; border-radius: 4px; text-align: right; line-height:14px; font-size: 12px; font-feature-settings: normal; text-size-adjust: 100%; box-shadow: inset 0 -20px 0 0 #262B38;padding:1px;padding: 0px; margin: 0px; width: 100%;"><div style="height:540px; padding:0px; margin:0px; width: 100%;"><iframe src="https://widget.coinlib.io/widget?type=chart&theme=dark&coin_id=859&pref_coin_id=1505" width="100%" height="536px" scrolling="auto" marginwidth="0" marginheight="0" frameborder="0" border="0" style="border:0;margin:0;padding:0;line-height:14px;"></iframe></div><div style="color: #626B7F; line-height: 14px; font-weight: 400; font-size: 11px; box-sizing: border-box; padding: 2px 6px; width: 100%; font-family: Verdana, Tahoma, Arial, sans-serif;"><a href="https://coinlib.io" target="_blank" style="font-weight: 500; color: #626B7F; text-decoration:none; font-size:11px">Cryptocurrency Prices</a>&nbsp;by Coinlib</div></div>

    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="wallet-adress" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-body">
                <h2>Your wallet's address is:</h2>
                <hr />
                <div class="d-flex" style=" font-size: 18px; letter-spacing: 1.5px;">

                <i class="fas fa-copy"></i>
                <div id="wallet-adress" onClick='copyAdress(this)'>
                    @ViewBag.adress
                </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
